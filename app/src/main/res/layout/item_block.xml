<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_block"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_item_width"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="0dp"
    app:cardCornerRadius="@dimen/item_radius"
    app:cardElevation="0dp"
    app:contentPadding="8dp">


    <TextView
        android:id="@+id/tv_block_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_x_medium"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textSize="32sp"
        tools:text="@string/_1" />

</androidx.cardview.widget.CardView>